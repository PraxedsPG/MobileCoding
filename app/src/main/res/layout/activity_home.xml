<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context="com.view.Home">

    <TextView
        android:id="@+id/txtNomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Bem-vindo(a), Vinícius"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/pesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:queryHint="pesquisar.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuario" />

    <TextView
        android:id="@+id/txtTituloServicos"
        android:layout_width="168dp"
        android:layout_height="28dp"
        android:layout_margin="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Todos os Serviços"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pesquisa"
        />

    <ImageView
        android:id="@+id/imgEventos"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:src="@drawable/exercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloServicos"
         />

    <TextView
        android:id="@+id/txtEventos"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Eventos"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgEventos"
        app:layout_constraintStart_toStartOf="@+id/imgEventos"
        app:layout_constraintTop_toBottomOf="@+id/imgEventos"
        />

    <ImageView
        android:id="@+id/imgAcademias"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:src="@drawable/academiarecife5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEventos"
        />

    <TextView
        android:id="@+id/txtAcademias"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Academias"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgAcademias"
        app:layout_constraintStart_toStartOf="@+id/imgAcademias"
        app:layout_constraintTop_toBottomOf="@+id/imgAcademias"
         />

    <ImageView
        android:id="@+id/imgOrientacoes"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:src="@drawable/atendimento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAcademias"
         />

    <TextView
        android:id="@+id/txtOrientacoes"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Orientações"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgOrientacoes"
        app:layout_constraintStart_toStartOf="@+id/imgOrientacoes"
        app:layout_constraintTop_toBottomOf="@+id/imgOrientacoes"
         />

    <ImageView
        android:id="@+id/imgVoluntario"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:src="@drawable/instrutor0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOrientacoes"
         />

    <TextView
        android:id="@+id/txtVoluntario"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Voluntarie-se"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgVoluntario"
        app:layout_constraintStart_toStartOf="@+id/imgVoluntario"
        app:layout_constraintTop_toBottomOf="@+id/imgVoluntario"
        />

    <Button
        android:id="@+id/btAgendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/alizarin"
        android:drawableEnd="@drawable/baseline_arrow_right_alt_24"
        android:padding="15dp"
        android:text="AGENDAR"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>